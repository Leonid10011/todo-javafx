<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.TodoController" spacing='10' style="-fx-padding: 10" >
    <!-- Title or Header can be added here -->
    <ListView fx:id="taskListView" prefHeight="200.0" prefWidth="200.0"/>
    <HBox spacing="10">
        <TextField fx:id="newTaskField" promptText="Enter new task" prefWidth="150"/>
        <Button fx:id="addButton" text="Add" onAction="#handleAddButtonAction"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteButtonAction"/>
    </HBox>
    <!-- Additional UI elements can be added here -->
</VBox>
